<div class="task-block">
  <h2><%= @task.name %></h2>
  <div class="line-dark"></div>
  <p><%= @task.description %></p>
  <p>Created: <%= @task.friendly_created_at %></p>
  <p>Due: <%= @task.due_date %></p>
  <p>Status: <%= @task.status %></p>
  <p>Priority: <%= @task.priority %></p>
  <%= link_to "Edit Task", edit_project_task_path(@project, @task), class: "btn btn-sm btn-primary" %> 
</div>

<div class="comment-block">
  <div class="row">
  
    <div class="col-md-4">
      <%= render partial: "comments/form", locals: {comment: @comment} %>
    </div>

    <div class="col-md-8">
      <h3>Comments</h3>
      <div class="line-dark"></div>
      <% @comments.each do |comment| %>
        <p> Posted: <%= comment.friendly_created_at %></p>
        <p> <%= comment.content %></p>
        <div class="inline-button">
          <%= link_to "Edit", edit_comment_path(comment), class: "btn btn-sm btn-primary" %> 
        </div>
        <div class="inline-button">    
          <%= button_to "Delete", comment_path(comment), method: :delete, class: "btn btn-sm btn-danger" %>
        </div>
        <div class="line-light"></div>
      <% end %>
    </div>

  </div>
</div>