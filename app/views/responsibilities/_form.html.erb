<% if responsibility.errors.any? %>
  <div id="error_explanation">
    <h3>
      <%= pluralize(responsibility.errors.count, "error") %>
      prohibited this responsibility from being saved:
    </h3>
 
    <ul>
    <% responsibility.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(responsibility) do |f| %>
  <%= f.label :name %>
    <%= f.text_field :name, placeholder: "Name" %>
  <%= f.label :description %>
    <%= f.text_field :description, placeholder: "Description" %>
  <%= f.label :status %>
    <% Responsibility.statuses.each do |s,index| %>
      <%= s.capitalize %>
      <%= f.radio_button :status, s %>
    <% end %>
  <%= f.hidden_field :user_id, value: @user.id %>
  <%= f.submit class: "btn btn-default" %>
<% end %>