<div class="default-block">
  <h2> <%= @project.name %> <%= "âœ“" if @project.complete? %></h2>
  <div class="inline-button">
    <%= link_to "Edit Project", edit_project_path(@project), class: "btn btn-primary" %>
  </div>
  <div class="inline-button">
    <%= link_to "New Task", new_project_task_path(@project), class: "btn btn-primary" %>
  </div>
  <div class="line-dark"></div>
  <div class="row">
    <div class="col-md-4">
      <h3> Info </h3>
      <p> <%= @project.description %> </p>
      <p> Created: <%= @project.friendly_created_at %> </p>
      <p> Due: <%= @project.due_date %> </p>
      <p> Status:<%= @project.status %> </p>
    </div>

    <div class="col-md-4">
      <h3> People </h3>
      <p> <%= @project.owner.name %> (Owner) </p>
      <% @project.collaborators.each do |person| %>
        <p><%= person.name  %></p>
      <% end %>
    </div>

    <div class="col-md-4">
      <h3> Items </h3>
      <p> <%= link_to "#{@project.tasks.active.count} Open Tasks", project_tasks_path(@project), class: "btn btn-warning" %></p>
      <p> <%= link_to "#{@project.tasks.complete.count} Complete Tasks", complete_project_tasks_path(@project), class: "btn btn-success" %></p>
      <p> <%= link_to "#{@project.tasks.overdue.count} Overdue Tasks", overdue_project_tasks_path(@project), class: "btn btn-danger" %></p>
      <p> <%= link_to "#{@project.comments.count} Comments", project_tasks_path(@project), class: "btn btn-default" %></p>
      <p> <%= link_to "#{@project.tasks.active.count} Notes", project_tasks_path(@project), class: "btn btn-default" %></p>
    </div>
  </div>


</div>