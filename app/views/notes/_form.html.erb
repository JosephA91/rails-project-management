<% if note.errors.any? %>
  <div id="error_explanation">
    <h3>
      <%= pluralize(note.errors.count, "error") %>
      prohibited this note from being saved:
    </h3>
 
    <ul>
    <% note.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(note, html: {class: "note-form"}) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
      <%= f.text_field :title, placeholder: "Title", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :content %>
      <%= f.text_area :content, placeholder: "Write your note here...", class: "form-control note-text-area", rows: "5"%>
  </div>
  <div class="form-group">
    <%= f.hidden_field :user_id, value: @user.id %>
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>