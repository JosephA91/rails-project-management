<div class="header">
  <div class="container">
    <h1>Home</h1>
  </div>
</div>

<div class="container">
  <div class="notice"><%= notice %></div>
  <div class="alert"><%= alert %></div>

  <div class="default-block">
    <h2>Your Stats</h2>
    <div class="row">
      <div class="col-sm-4 col-md-3">
        <h3> <%= link_to "#{@user.projects.count} projects", projects_path %></h3>
        <%= link_to "Active Projects ( #{@active_projects} )", projects_path, class: "btn btn-warning btn-margin" %> 
        <%= link_to "Complete Projects ( #{@complete_projects} )", complete_projects_path, class: "btn btn-success btn-margin" %>
        <%= link_to "Overdue Projects ( #{@overdue_projects} )", overdue_projects_path, class: "btn btn-danger btn-margin" %>
      </div>
      <div class="col-sm-4 col-md-3">
        <h3> <%= link_to "#{@user.tasks.count} tasks", all_tasks_path %></h3>
        <%= link_to "Active Tasks ( #{@active_tasks} )", all_tasks_path, class: "btn btn-warning btn-margin" %> 
        <%= link_to "Complete Tasks ( #{@complete_tasks} )", "#", class: "btn btn-success btn-margin" %>
        <%= link_to "Overdue Tasks ( #{@overdue_tasks} )"," all_tasks_path", class: "btn btn-danger btn-margin" %>
      </div>
    </div> <!-- row end -->
  </div> <!-- block end -->

</div> <!-- container end -->