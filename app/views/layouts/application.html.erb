<!DOCTYPE html>
<html>
  <head>
    <title>Rails PTM</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>
  <body>
  <%= render "navs/nav_base"%>
    <div class="header">
      <div class="container">
        <% if params[:controller] == "users/registrations" && params[:action] == "edit" %>
          <h1>Profile</h1>
        <% elsif params[:controller] == "users/registrations" %>
          <h1>Sign Up!</h1>
        <% elsif params[:controller] == "admin/dashboard" %>
          <h1>Admin</h1>
        <% elsif params[:controller] == "devise/sessions"%>
          <h1>Login</h1>
        <% elsif params[:action] == "profile"%>
          <h1>Profile</h1>
        <% else %>
          <h1><%= params[:controller].capitalize%></h1>
        <% end %>
      </div>
    </div>
    <div class="container">
      <div class="notice"><%= notice %></div>
      <div class="alert"><%= alert %></div>
    <%= yield %>
    </div>
  </body>
</html>
