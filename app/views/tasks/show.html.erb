<div class="row">

  <div class="col-md-4">

    <div class="default-block">
      <h2><%= @task.name %></h2>
      <p> Created: <%= @task.friendly_created_at %></p>
      <p> Due: <%= @task.due_date %> </p>
      <p> Status: <%= @task.status %></p>
      <p> Tags: <%@task.tags.each do |tag| %> 
          <%= tag.name %>,
          <% end %>
      </p>
      <p><%= @task.description %></p>

      <div class="inline-button">    
        <%= link_to "Edit Task", edit_task_path(@task), class: "btn btn-sm btn-primary td-button" %>
      </div>
      <div class="inline-button">
        <%= render partial: "task_complete_form", locals: {task: @task} unless @task.status == "complete" %>
      </div>
    </div> <!-- default block end  -->

    <div class="default-block">
      <%= render partial: "messages/errors", locals: {resource: @comment} %>
      <h3>New Comment</h3>
      <div class="line-dark"></div>
      <%= render partial: "comments/form", locals: {comment: @comment} %>
    </div> <!-- default block end  -->

  </div> <!-- col-md-4 end -->

  <div class="col-md-8">
    <div class="default-block">
      <h3>Task Comments</h3>
      <div class="line-dark"></div>
      
      <% @comments.each do |comment| %>
        <div id="<%= comment.id%>"><p> Posted: <%= comment.friendly_created_at %> by <%= comment.user.name %></p>
          <p> <%= comment.content %></p>
          <div class="inline-button">
            <%= link_to "Edit", edit_comment_path(comment), class: "btn btn-sm btn-primary" %> 
          </div>
          <div class="inline-button">    
            <%= button_to "Delete", comment_path(comment), method: :delete, class: "btn btn-sm btn-danger" %>
          </div>
          <div class="line-light"></div>
        </div>
      <% end %>

    </div> <!-- default block end  -->
  </div> <!-- col-md-8 end -->

</div> <!-- Row end -->
