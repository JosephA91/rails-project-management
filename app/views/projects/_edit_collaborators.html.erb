<div class="row">
  <div class="col-xs-5">
    <div class="inline">
      <%= form_for(collaborator, url: project_delete_collaborator_path(@project), method: :post) do |f|%>
        <%= f.hidden_field :id %>
        <%= f.submit "x", class: "btn btn-xs btn-danger inline" %>
      <% end %>
    </div>
    <div class="inline"><p><%= collaborator.name  %></p></div>
  </div>  
  <div class="col-xs-7">
    <div class="inline"><p>Permission:</p></div>
    <div class="inline">
      <%= form_tag do %>
          <%= radio_button_tag(:permission, "view") %>
          <%= label_tag(:permission_view, "View") %>
          <%= radio_button_tag(:permission, "edit") %>
          <%= label_tag(:permission_edit, "Edit") %>
          <%= submit_tag "Update", class: "btn btn-xs btn-primary inline" %>
      <% end %>
    </div>
  </div>  
</div>