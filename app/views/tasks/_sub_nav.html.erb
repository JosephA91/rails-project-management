<div class="default-block">
  <div class="inline-button">
    <%= link_to "Active Tasks", project_tasks_path(project, task), class: "btn btn-warning" %> 
  </div>
  <div class="inline-button">
    <%= link_to "Complete Tasks", complete_project_tasks_path(project, task), class: "btn btn-success" %>
  </div>
  <div class="inline-button">
    <%= link_to "Edit Project", project_path(project), class: "btn btn-primary" %>
  </div>
  <div class="inline-button">
    <input type="button" id="show-task" value="Add a Task" class="btn btn-primary">
  </div>
</div>

<%= render partial: "tasks/new_project_task", locals: {project: @project, task: @task} %>


