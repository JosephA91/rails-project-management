<% if @task.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@task.errors.count, "error") %>
      prohibited this @task from being saved:
    </h2>
 
    <ul>
    <% @task.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@task) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
      <%= f.text_field :description, class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :due_date %>
      <%= f.date_select(:due_date, :order => [:month, :day, :year]) %>
  </div>
  <div class="form-group">
    <%= f.label :status %>
      <% Task.statuses.each do |s,index| %>
        <%= s.capitalize %>
        <%= f.radio_button :status, s, class: "radio-inline" %>
      <% end %>
  </div>
  <div class="form-group">
    <%= f.label :priority %>
      <% Task.priorities.each do |p,index| %>
        <%= p.capitalize %>
        <%= f.radio_button :priority, p, class: "radio-inline" %>
      <% end %>
  </div>
  <div class="form-group">
    <%= f.label :tag_names, "Tags (Comma seperated)" %>
      <%= f.text_field :tag_names, class: "form-control"%>
  </div>
  <div class="form-group project-select">
    <%= collection_select(:task, :project_id, Project.all, :id, :name) %>
  </div>
  <div class="form-group">
    <%= f.hidden_field :user_id, value: @user.id %>
    <%= f.submit class: "btn btn-primary"%>
  </div>
<% end %>