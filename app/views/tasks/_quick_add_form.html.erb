<% if task.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(task.errors.count, "error") %>
      prohibited this task from being saved:
    </h2>
 
    <ul>
    <% task.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div class="task-block">
<%= form_for(task, {url: tasks_path, controller: "tasks", action: "create", method: "post", html: {class: "form-inline"}}) do |f| %>
  <div class="form-group">
    <%= f.label :name, class: "label-block"%>
      <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :description, class: "label-block" %>
      <%= f.text_field :description, class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :due_date, class: "label-block" %>
      <%= f.date_select(:due_date, :order => [:month, :day, :year]) %>
  </div>
  <div class="form-group">
    <%= f.label :priority, class: "label-block" %>
      <% Task.priorities.each do |p,index| %>
        <%= p.capitalize %>
        <%= f.radio_button :priority, p, class: "radio-inline" %>
      <% end %>
  </div>
  <div class="form-group">
    <%= f.label :tag_names, value: "Tags (Comma seperated)", class: "label-block" %>
      <%= f.text_field :tag_names, class: "form-control"%>
  </div>
  <div class="form-group project-select">
    <%= collection_select(:task, :project_id, Project.all, :id, :name) %>
  </div>
  <div class="form-group button-align">
    <%= f.hidden_field :user_id, value: @user.id %>
    <%= f.submit class: "btn btn-primary"%>
  </div>
<% end %>
</div>